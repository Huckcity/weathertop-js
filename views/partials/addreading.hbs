<section>
  <form
    action='/stations/{{station._id}}/addreading'
    method='post'
    class='form'
  >
    <div class='mb-3'>
      <label class='form-label' for='code'>Code</label>
      <select class='form-control' name='code' id='code' class='form-input'>
        <option value='100'>100 (Clear)</option>
        <option value='200'>200 (Partial cloud)</option>
        <option value='300'>300 (Cloudy)</option>
        <option value='400'>400 (Light showers)</option>
        <option value='500'>500 (Heavy showers)</option>
        <option value='600'>600 (Rain)</option>
        <option value='700'>700 (Snow)</option>
        <option value='800'>800 (Thunder)</option>
      </select>
    </div>
    <div class='mb-3'>
      <label class='form-label' for='temperature'>Temperature</label>
      <input
        class='form-control'
        type='number'
        id='temperature'
        name='temperature'
        placeholder=' 5.0C'
        step='any'
        required
      />
    </div>
    <div class='mb-3'>
      <label class='form-label' for='windSpeed'>Wind Speed</label>
      <input
        class='form-control'
        type='number'
        id='windSpeed'
        name='windSpeed'
        placeholder=' 10.5kmph'
        step='any'
        required
      />
    </div>
    <div class='mb-3'>
      <label class='form-label' for='windDirection'>Wind Direction</label>
      <input
        class='form-control'
        type='number'
        id='windDirection'
        name='windDirection'
        placeholder=' 180deg'
        required
      />
    </div>
    <div class='mb-3'>
      <label class='form-label' for='pressure'>Pressure</label>
      <input
        class='form-control'
        type='number'
        id='pressure'
        name='pressure'
        placeholder=' 000hPa'
        required
      />
    </div>
    <button type='submit' class='btn btn-primary'>Save Reading</button>
  </form>

</section>