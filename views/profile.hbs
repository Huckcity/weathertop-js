{{> authmenu id="profile"}}

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
  </symbol>
  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </symbol>
</svg>

<section class="container w-50 mt-4">

  {{#if msg}}
    <div class="alert alert-success d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>
        {{msg}}
      </div>
    </div>
  {{/if}}

  {{#if err}}
    <div class="alert alert-warning d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
      <div>
        {{err}}
      </div>
    </div>
  {{/if}}

  <h3>{{user.username}}'s Profile</h3>

  <form action="/updateProfile" method="POST">
    <div class='mb-3'>
      <label for='username'>Username</label>
      <input type="text" class='form-control' name="username" id="username" value="{{user.username}}" disabled>
    </div>

    <div class='mb-3'>
      <label for='fname'>First Name</label>
      <input type="text" class='form-control' name="fname" id="fname" value="{{user.fname}}" placeholder="First name">
    </div>

    <div class='mb-3'>
      <label for='lname'>Last Name</label>
      <input type="text" class='form-control' name="lname" id="lname" value="{{user.lname}}" placeholder="Surname">
    </div>

    <div class='mb-3'>
      <label for='email'>Email</label>
      <input type="email" class='form-control' name="email" id="email" value="{{user.email}}" disabled>
    </div>
    <hr>
    <div class='mb-3'>
      <label for='old_password'>Old Password</label>
      <input type="password" class='form-control' name="old_password" id="old_password" placeholder="Old password">
    </div>
    <div class='mb-3'>
      <label for='new_password'>New Password</label>
      <input type="password" class='form-control' name="new_password" id="new_password" placeholder="New password">
    </div>
    <div class='mb-3'>
      <label for='repeat_password'>Repeat Password</label>
      <input type="password" class='form-control' name="repeat_password" id="repeat_password"
        placeholder="Repeat password">
    </div>
    <hr>
    <div class='mb-3'>
      <label for='broker'>Broker</label>
      <input type="text" class='form-control' name="url" id="url" placeholder="MQTT Broker" value="{{user.broker.url}}">
    </div>
    <div class='mb-3'>
      <label for='port'>Port</label>
      <input type="number" class='form-control' name="port" id="port" placeholder="MQTT Port" value="{{user.broker.port}}">
    </div>
    <div class='mb-3'>
      <label for='topic'>Root</label>
      <input type="text" class='form-control' name="root" id="root" placeholder="Root Topic (Optional)" value="{{user.broker.root}}">
    </div>

    <button type='submit' class='btn btn-primary'>Save Changes</button>
  </form>
</section>